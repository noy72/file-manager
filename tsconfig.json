{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "react",
    "module": "es2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}